<% var currentNode = currentNode || {}; %>

<div id="<%-currentNode.id%>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">

    <% currentNode.images.forEach(function (image,index) { %>
        <% 
            var css = "";
            if(index===0) {
                css = "active";
            }
        %>
        <div class="carousel-item <%-css%>">
            <img class="d-block w-100" src="<%-image.url%>" alt="<%-image.alt%>">
        </div>

    <% }); %>

    <a class="carousel-control-prev" href="#<%-currentNode.id%>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only"><%-currentNode.btn_previous%></span>
    </a>
    <a class="carousel-control-next" href="#<%-currentNode.id%>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only"><%-currentNode.btn_next%></span>
    </a>
    
  </div>
</div>