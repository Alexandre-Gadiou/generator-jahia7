<% var currentNode = currentNode || {}; %>

<div id="<%-currentNode.id%>" role="tablist">    
    <% currentNode.listFAQ.forEach(function (q,index) { %>
        <div class="card">
            <div class="card-header" role="tab" id="<%-currentNode.id%>_heading<%-index%>">
                <h5 class="mb-0">
                <a data-toggle="collapse" href="#<%-currentNode.id%>_collapse<%-index%>" aria-expanded="<%-q.collapsed%>" aria-controls="<%-currentNode.id%>_collapse<%-index%>">
                    <%-q.title%>
                </a>
                </h5>
            </div>

            <% 
                var css = "";
                if(q.collapsed==="true") {
                    css = "show";
                }
            %>
        
            <div id="<%-currentNode.id%>_collapse<%-index%>" class="collapse <%-css%>" role="tabpanel" aria-labelledby="<%-currentNode.id%>_heading<%-index%>" data-parent="#accordion">
                <div class="card-body">
                    <%-q.text%>
                </div>
            </div>
            </div>
    <% }); %>
</div>
